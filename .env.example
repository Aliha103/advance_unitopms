# ============================================
# UnitoPMS - Production Environment
# ============================================
# Copy this to .env and customize for your environment
# NEVER commit the actual .env file!

# Django
DEBUG=0
SECRET_KEY=change-me-to-a-strong-random-key-in-production
ALLOWED_HOSTS=unitopms.com,www.unitopms.com

# Database
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=change-me-strong-db-password
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis & Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Cloudflare
CLOUDFLARED_TOKEN=your-cloudflare-tunnel-token

# Grafana
GRAFANA_ADMIN_PASSWORD=change-me-strong-grafana-password

# Discord
DISCORD_WEBHOOK_URL=your-discord-webhook-url
